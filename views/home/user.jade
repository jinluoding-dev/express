extends ../layout
block content
      .widget-box
        .widget-title
          h5 用户列表
        .widget-content.nopadding
          table.table.table-bordered.table-striped
            thead
              tr
                th 头像
                th 微信ID
                th 昵称
                th 电话
                th 地址
                th 关注日期
                th 查看
            tbody
              each user, i in userList
                tr
                  td.pic
                    img(src=user.headimgurl)
                  td #{user.open_id}
                  td #{user.nickname}
                  td #{user.tel}
                  td #{user.address}
                  td #{moment(new Date(parseInt(user.attention_date))).format('YYYY-MM-DD hh:mm')}
                  td.op
                    a.btn.btn-mini.btn-info(href="/users/#{user._id}/evaluate-report")
                      i.icon-comment.icon-white
                      | 评估报告
                    a.btn.btn-mini.btn-info(href="/users/#{user._id}/coupon")
                      i.icon-gift.icon-white
                      | 优惠券
                    a.btn.btn-mini.btn-info(href="/orders/users/#{user.open_id}")
                      i.icon-th-list.icon-white
                      | 订单
